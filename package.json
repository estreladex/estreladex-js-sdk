{
  "name": "@estreladex/sdk",
  "version": "0.0.0-development",
  "description": "Minimalistic Estrela SDK provides an easy integration for DApps in the browser or Node.js",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">= 20.9",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allbridge-public/estrela-js-sdk.git"
  },
  "scripts": {
    "clean": "rimraf coverage dist && pnpm run clean:docs",
    "clean:docs": "find ./docs -not -name \"404.html\" -not -name \"docs\" -exec rm -rf {} \\+",
    "clean:all": "pnpm run clean && pnpm run clean:docs && rimraf node_modules",
    "install:dependencies": "pnpm i",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint src examples --ext .ts --fix",
    "lint:check": "eslint src examples --ext .ts",
    "spell:check": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "tsdoc": "typedoc --excludeInternal src/index.ts --cleanOutputDir false",
    "test": "jest --testPathIgnorePatterns '.*\\.manual\\.ts$'",
    "test:watch": "jest --watch --testPathIgnorePatterns '.*\\.manual\\.ts$'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns '.*\\.manual\\.ts$'",
    "commit": "cz",
    "prepack": "pnpm run updateVersion",
    "updateVersion": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "prepare": "pnpm run buildVersion",
    "buildVersion": "tsc --p tsconfig.version.json",
    "release": "semantic-release"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^14.0.0-rc.3",
    "bignumber.js": "^9.3.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.5",
    "@semantic-release/gitlab": "^13.2.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.15",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sort-exports": "^0.9.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
